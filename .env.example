# Configuration Docker pour Konipa
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Configuration de la base de données MySQL
MYSQL_ROOT_PASSWORD=konipa_root_2024
MYSQL_DATABASE=konipa_dev
MYSQL_USER=konipa_user
MYSQL_PASSWORD=konipa_pass_2024
MYSQL_HOST=konipa-db
MYSQL_PORT=3306

# Configuration Redis
REDIS_HOST=konipa-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuration Backend
NODE_ENV=development
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Configuration Frontend
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=Konipa
VITE_APP_VERSION=1.0.0

# Configuration des uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Configuration CORS
CORS_ORIGIN=http://localhost:5173

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuration de l'email (optionnel)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@konipa.fr

# Configuration de sécurité
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# Configuration des limites de taux
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration de monitoring (optionnel)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Configuration de développement
DEBUG=konipa:*
HOT_RELOAD=true
SOURCE_MAPS=true